---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout title="Contact us">
  <div class="flex gap-20 mx-32 flex-col max-md:gap-10">
    <div class="flex flex-col gap-10">
      <h1 class="text-center text-6xl max-md:text-4xl">Contact</h1>
      <h1 class="text-xl">
        We're here to answer your questions, address your concerns, and welcome
        your support in making a difference.
      </h1>
    </div>
    <div class="grid grid-cols-2 gap-20">
      <div
        class="bg-gradient-to-r from-primary to-secondary text-white flex flex-col items-center justify-center p-10 rounded-lg shadow-lg relative"
      >
        <h1 class="text-5xl font-bold mt-10">Call us</h1>
        <div class="flex gap-4 flex-col mt-8">
          <a class="text-white hover:underline" href="tel:+64212146247"
            >021 214 6247</a
          >
          <a class="text-white hover:underline" href="tel:+64220380826"
            >022 038 0826</a
          >
        </div>
      </div>

      <div
        class="bg-gradient-to-r from-gray-200 to-gray-300 text-gray-700 flex flex-col items-center justify-center p-10 rounded-lg shadow-lg relative"
      >
        <h1 class="text-5xl font-bold mt-10">Email</h1>
        <div class="flex gap-4 flex-col mt-8">
          <a
            class="text-gray-700 hover:underline"
            href="mailto:info@nzethnicwomen.org">info@nzethnicwomen.org</a
          >
          <a
            class="text-gray-700 hover:underline"
            href="mailto:admin@nzethnicwomen.org">admin@nzethnicwomen.org</a
          >
        </div>
      </div>
    </div>
    <div class="text-2xl text-center max-md:text-xl">
      <h2 class="">If you need immediate help, please call us.</h2>
      <h2 class="mt-8 font-bold">Working hours</h2>
      <h2 class="mt-4">Monday - Friday : 9:00AM - 4:00PM</h2>
    </div>
  </div>
</Layout>
